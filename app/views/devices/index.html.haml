:javascript
  $(function() {
    Ext.application({
      name: 'Gowane',
      autoCreateViewport: false,
      controllers: ['Gowane.controllers.Devices'],
      launch: function() {
        Ext.create('Gowane.stores.Devices', {
          storeId: "DeviceStore"
        });
        new Ext.Viewport({
          layout : 'border',
          items : [
            { xtype: 'menu', region : 'north'},
            { region : 'west', width: 900, xtype: 'full_device_list', split: true},
            { xtype: 'sharedsidecolumn', region: 'center', layout: 'fit', layoutConfig: {align: 'stretch'},
              items: [{xtype: 'panel', contentEl: 'help_text', width: 300, border: 0, bodyStyle: {
                margin: '10px'
              }}]
            }
          ]
        });
      }
    });
  });
