<%= render :partial => "listing" %>
<%= render :partial => "alert_table" %>
<%= render :partial => "speed_table" %>
<%= render :partial => "distance_table" %>
<%= render :partial => "new_report" %>
<%= render :partial => "stop_table" %>
<%= render :partial => "parameters" %>
<%= render :partial => "presentation" %>
<%= render :partial => "reports" %>

<div id="canvas">
  <div class="presentation"></div>
  <div class="sidebar">
    <div class="report-listing listing lionbars" style="display: none"></div>
    <div class="parameters"></div>
    <div class="device-listing listing lionbars"></div>
    <button class="back btn" style="display: none"><%= t("report.back") %></button>
    <div class="btn-group">
          <button class="run btn primary"><%= t("report.run_report") %></button>
          <button data-toggle="dropdown" class="btn primary dropdown-toggle"><span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><a class="your-reports" href="#"><%= t("menu.your_reports") %></a></li>
            <li><a class="save-report" href="#"><%= t("report.save_report") %></a></li>
          </ul>
        </div>
  </div>
  <div class="toolbar">
    <div class='button pdf'>
      <img src='/assets/103-map.png'><label><%= t("report.export_pdf") %></label>
    </div>
    <div class='button excel'>
      <img src='/assets/103-map.png'><label><%= t("report.export_excel") %></label>
    </div>
    <div class='button toggle'>
      <img src='/assets/103-map.png'><label><%= t("report.show_data") %></label>
    </div>
  </div>
  <div class="saved-report-details"></div>
</div>

<script type="text/javascript">
  $(function() {
    var controller = new Trackwane.Controllers.ReportsController({el: "#canvas"});
  });
</script>
