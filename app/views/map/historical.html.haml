:javascript
  $(function() {
  $.App = {};
    $.App.help = "historical";
    $.App.account_id = #{session[:account_id]};
    var button_toolbar = {xtype: 'toolbar', items:[
      {xtype: 'button', enableToggle: true, text: "Show Places", id: "btn_toggle_places"},
      {id: "btn_toggle_geofences", enableToggle: true, xtype: 'button', text: "Show Geofences"}
    ]};
    Ext.application({
      name: 'Gowane',
      autoCreateViewport: false,
      controllers: ['Gowane.controllers.Historical'],
      launch: function() {
        new Ext.Viewport({
          layout : 'border',
          items : [
            { xtype: 'panel', contentEl: 'menu', region : 'north'},
            {region : 'center', xtype: 'panel', split: false, layout: {type: 'vbox', pack: 'start', align: 'stretch'}, items: [
              {xtype: 'historical_map', id: 'historical-map', flex: 6, dockedItems: [button_toolbar]},
              {xtype: 'full_gps_event_list', flex: 2},
              {xtype: 'panel', layout: 'hbox', height: 50, items: [
              	{xtype: 'button', icon: "/assets/button_grey_stop.gif", scale: 'large', width: 35, height: 35, margin: '3 3 0 3'},
             		{xtype: 'button', icon: "/assets/button_grey_play.gif", scale: 'large', width: 35, height: 35, margin: '3 3 0 0'},
             		{xtype: 'slider', height: 20, margin: '7 0 0 0', flex: 10}
              ]}
            ]},
            {region: 'east', xtype: 'sharedsidecolumn', width: 300, flex: 1, layout: {type: 'vbox', pack: 'start', align: 'stretch'}, items: [
              {xtype: "date_selection", width: 300},
              {xtype: 'summary_device_list', width: 300}
            ]}
          ]
        });
      }
    });
  });
