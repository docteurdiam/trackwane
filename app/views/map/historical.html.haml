:javascript
  $(function() {
    $.App.help = "historical";
    $.App.account_id = #{session[:account_id]};
    Ext.application({
      name: 'Gowane',
      autoCreateViewport: false,
      controllers: ['Gowane.controllers.Historical'],
      launch: function() {
        new Ext.Viewport({
          layout : 'border',
          items : [
            {xtype: 'menu', region : 'north'},
            {region : 'west', width: 900, xtype: 'panel', split: true, layout: {type: 'vbox', pack: 'start', align: 'stretch'}, items: [
              {xtype: 'historical_map', id: 'historical-map', flex: 6},
              {xtype: 'full_gps_event_list', flex: 2},
              {xtype: 'panel', layout: 'hbox', items: [
             		{xtype: 'button', text: 'Start', flex: 1, margin: '0 5 0 0'},
             		{xtype: 'slider', height: 20, margin: '2 0 0 0', flex: 10}
              ]}
            ]},
            {region: 'center', xtype: 'sharedsidecolumn', flex: 1, layout: {type: 'vbox', pack: 'start', align: 'stretch'}, items: [
              {xtype: "date_selection"},
              {xtype: 'summary_device_list'}
            ]}
          ]
        });
      }
    });
  });
